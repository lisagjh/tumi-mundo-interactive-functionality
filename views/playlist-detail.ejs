<%- include('./partials/detail-head') %>
  <header>
    <%- include('partials/nav', {current: '/playlists' }); %>
  </header>

  <main>

    <section class="container">

      <% playlist.forEach(item=> { %>

        <% if (item.image) { %><img src="https://fdnd-agency.directus.app/assets/<%= item.image %>"
            alt="story cover image">
          <% } %>

            <h1>
              <%= item.title %>
            </h1>

            <p>
              <%= item.description %>
            </p>

            <form action="/playlist/<%= playlist.slug %>" method="post">
              <input type="hidden" name="slug" value="<%= playlist.slug %>">
              <button type="submit" id="share">
                <img src="/assets/light/heart.svg">
              </button>
            </form>

            <section class="story">
              <% stories.forEach(story=> { %>
                <h3>
                  <%= story.title %>
                </h3>
                <% if (story.image) { %><img src="https://fdnd-agency.directus.app/assets/<%= story.image %>"
                    alt="story cover image">
                  <% } %>
                    <%= story.summary %>
                      </p>

                      <% }) %>
                        <% }) %>
            </section>

  </main>

  <%- include('./partials/foot') %>